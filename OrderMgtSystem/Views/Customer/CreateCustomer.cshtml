@model OrderMgtSystem.Models.Customer

@{
    ViewData["Title"] = "Create New Customer";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Create New Customer</h2>
            <p class="text-muted">Fill in the details below to create a new Customer</p>

            <div class="card mt-4">
                <div class="card-body">
                    <form asp-action="CreateCustomer" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Customer Details Section -->
                        <fieldset>
                            <legend class="text-primary mb-3 mt-4">Customer Details</legend>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <textarea asp-for="FirstName" class="form-control" rows="3" placeholder="First Name"></textarea>
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                        <small class="form-text text-muted">Required: 1-100 characters</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="LastName" class="form-label"></label>
                                        <textarea asp-for="LastName" class="form-control" rows="3" placeholder="Last Name"></textarea>
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                        <small class="form-text text-muted">Required: 1-100 characters</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Email" class="form-label"></label>
                                        <input type="email" asp-for="Email" class="form-control" placeholder="customer@example.com">
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                        <small class="form-text text-muted">Required: Valid email address</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Phone" class="form-label"></label>
                                        <input type="tel" asp-for="Phone" class="form-control" placeholder="1234567890">
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                        <small class="form-text text-muted">Required: 10-13 digits</small>
                                    </div>
                                </div>
                            </div>
                        </fieldset>


                        <!-- Form Actions -->
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Save Customer
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    fieldset {
        border-left: 4px solid #007bff;
        padding-left: 20px;
    }

    legend {
        font-weight: 600;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .btn-lg {
        margin-right: 10px;
    }
</style>
