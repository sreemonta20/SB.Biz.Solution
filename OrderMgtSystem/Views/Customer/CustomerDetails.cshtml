@model OrderMgtSystem.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Customer Details #@Model.CustomerId</h2>
                <div>
                    @* <a href="@Url.Action("EditCustomer", new { id = Model.CustomerId })" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("DeleteCustomer", new { id = Model.CustomerId })" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a> *@
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Back to Customers
                    </a>
                </div>
            </div>

            <!-- Customer Information Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Customer Name:</strong> @($"{Model.FirstName} {Model.LastName}")</p>
                            <p class="mb-2"><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                            <p class="mb-0"><strong>Contact:</strong> <a href="tel:@Model.Phone">@Model.Phone</a></p>
                        </div>
                        
                    </div>
                </div>
            </div>

            <!-- Audit Trail Card -->
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Audit Trail</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <p class="mb-1"><strong>Created</strong></p>
                                <p class="text-muted mb-0">@Model.CreatedDate.ToString("MMMM dd, yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        margin-right: 5px;
        margin-bottom: 5px;
    }

    .timeline {
        position: relative;
        padding: 20px 0;
    }

    .timeline-item {
        display: flex;
        margin-bottom: 30px;
        position: relative;
    }

    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: 15px;
        top: 60px;
        height: 50px;
        width: 2px;
        background-color: #dee2e6;
    }

    .timeline-marker {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-right: 20px;
        margin-top: 5px;
        flex-shrink: 0;
    }

    .timeline-content {
        flex-grow: 1;
    }

    .table-borderless tbody tr td {
        border: none;
        padding: 1rem;
    }

    h5 {
        margin-bottom: 0;
    }
</style>
